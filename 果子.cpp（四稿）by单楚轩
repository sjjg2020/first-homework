 #include"apple.h"
#include<Windows.h>
void gotoxy2(HANDLE hOut2, int x, int y)
{
	COORD pos;
	pos.X = x; //横坐标
	pos.Y = y; //纵坐标
	SetConsoleCursorPosition(hOut2, pos);
}
HANDLE hOut2 = GetStdHandle(STD_OUTPUT_HANDLE);//定义显示器句柄变量

apple::apple(Wall &tempwall) :wall(tempwall)
{

}

void apple::suijifangzhi()
{

	while (true)
	{
		ix = rand() % (Wall::Row - 2) + 1;
		iy = rand() % (Wall::Col - 2) + 1;
		//如果随机的位置是蛇头或蛇身，就重新生成随机数
		if (wall.Getdata(ix, iy) == ' ')
		{
			wall.wallchange(ix, iy,'*');//改变墙 
			gotoxy2(hOut2, iy * 2, ix);//获得果子位置 
			cout << '*';
			break;
		}

	}
	
}
